# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Qdrant Cloud Configuration
# Get your credentials from https://cloud.qdrant.io/
QDRANT_URL=https://your-instance.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# Neon Postgres Configuration
# Get your connection string from https://neon.tech/
DATABASE_URL=postgresql://user:password@ep-name.neon.tech/dbname

# Admin Token (for /api/ingest endpoint - generate your own secure string)
ADMIN_TOKEN=your-secure-admin-token-here

# Backend Configuration
PORT=8000
ENVIRONMENT=development

# CORS Configuration (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_QUERIES_PER_HOUR=100

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_ENV=development
